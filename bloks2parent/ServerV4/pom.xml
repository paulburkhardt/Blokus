      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.1.1</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>gui.BlokusMain</mainClass>
            </manifest>
          </archive>
          <descriptorRefs>
